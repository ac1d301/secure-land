# ================================
# SECURE LAND - ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and update values as needed

# ================================
# PROXY MODE CONFIGURATION
# ================================
# Proxy mode: mock | external-api | ethers
# - mock: Use in-memory mock services (NO ETH REQUIRED) - RECOMMENDED for development
# - external-api: Use external blockchain/IPFS APIs (requires API keys)
# - ethers: Connect to real Ethereum network (requires wallet funding)
PROXY_MODE=mock

# ================================
# MOCK SERVICE CONFIGURATION (for PROXY_MODE=mock)
# ================================
# Enable realistic delays to simulate network latency
MOCK_ENABLE_REALISTIC_DELAYS=true

# Blockchain mock delays (in milliseconds)
MOCK_BLOCKCHAIN_MIN_DELAY=500
MOCK_BLOCKCHAIN_MAX_DELAY=2000

# IPFS mock delays (in milliseconds)
MOCK_IPFS_MIN_DELAY=200
MOCK_IPFS_MAX_DELAY=1500

# ================================
# DATABASE CONFIGURATION
# ================================
MONGO_URI=mongodb://localhost:27017/secureland

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET=secure_land_jwt_secret_very_long_string_here_2024

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ================================
# EXTERNAL API CONFIGURATION (for PROXY_MODE=external-api)
# ================================
# Only needed if using external-api mode
BLOCKCHAIN_API_BASE=https://api.secureland.io
BLOCKCHAIN_API_KEY=your_blockchain_api_key_here
BLOCKCHAIN_NETWORK=sepolia
IPFS_API_BASE=https://api.secureland.io
IPFS_API_KEY=your_ipfs_api_key_here

# ================================
# ETHEREUM CONFIGURATION (for PROXY_MODE=ethers)
# ================================
# Only needed if using ethers mode - requires real ETH
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_secret
CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your_private_key_here

# ================================
# IPFS PINATA CONFIGURATION (for PROXY_MODE=ethers)
# ================================
# Only needed if using ethers mode
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
MAILTRAP_USER=your_mailtrap_username
MAILTRAP_PASS=your_mailtrap_password
